<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="testChangeMethod" class="com.luo.spring.guides.helloworld.tagparsing.bean.replacedmethod.TestChangeMethod">
        <replaced-method name="changeMe" replacer="replacer"/>
    </bean>

    <bean id="replacer" class="com.luo.spring.guides.helloworld.tagparsing.bean.replacedmethod.TestMethodReplacer"/>


</beans>